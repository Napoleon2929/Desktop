<Window x:Class="Desktop.ChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Make your choice" Height="214" Width="266"
        ResizeMode="NoResize">
    <Grid Height="186" VerticalAlignment="Top" Margin="0,0,0,-1" >
        <ComboBox x:Name="ItemBox" Margin="21,60,21,76"/>
        <Button Content="OK" Click="OK_Click" Margin="21,126,151,38"/>
        <Button Content="Cancel" Click="Cancel_Click" Margin="151,126,21,38"/>
        <Label x:Name="Introduction" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="21,10,21,131"/>

    </Grid>
</Window>
